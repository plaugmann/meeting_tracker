generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          Role      @default(EMPLOYEE)
  target        Int       @default(8)
  meetings      Meeting[]
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum Role {
  EMPLOYEE
  MANAGER
  ADMIN
}

model Customer {
  id        String            @id @default(cuid())
  name      String            @unique
  meetings  MeetingCustomer[]
  createdAt DateTime          @default(now())
}

model Meeting {
  id                   String            @id @default(cuid())
  date                 DateTime
  description          String
  externalParticipants String
  userId               String
  user                 User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  customers            MeetingCustomer[]
  createdAt            DateTime          @default(now())
  updatedAt            DateTime          @updatedAt

  @@index([userId])
  @@index([date])
}

model MeetingCustomer {
  meetingId  String
  customerId String
  meeting    Meeting  @relation(fields: [meetingId], references: [id], onDelete: Cascade)
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@id([meetingId, customerId])
  @@index([customerId])
}
